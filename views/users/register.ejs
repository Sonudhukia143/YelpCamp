<%- include('../partials/header.ejs'); %>

<div class="row">
    <h1 class="text-center">Register</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/register" class="needs-validation" method="POST" novalidate>
            <div class="mb-3">
                <label class="form-label" for="username">Full Name</label>
                <input class="form-control" type="text" id="username" name="username" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="gmail">Gmail</label>
                <input class="form-control" type="text" id="gmail" name="gmail" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" id="password" name="password" required>
            </div>
            <div class="mb-3"><button class="btn btn-success">Register</button></div>
        </form>
    </div>
</div>

<%- include('../partials/footer.ejs'); %>